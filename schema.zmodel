datasource db {
    provider = 'postgresql'
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

/**
* User model
*/
model User {
    id String @id @default(cuid())
    email String @unique @email
    emailConfirmAt Boolean @default(false)
    password String @password @omit @length(8, 16)

    // everybody can signup
    @@allow('create', true)

    // full access by self
    @@allow('all', auth() == this)
}
